{
    "accumulate_step": 1,
    "batch_size": 32,
    "eval_batch_size": 32,
    "eval_period": 1,

    "bert_cache_dir": ".cache/bert",
    "learning_rate": 5e-05,
    "bert_model_name": "facebook/bart-base",
    "weight_decay": 1e-05,

    "train_file": "data/train_noisy.jsonl",
    "dev_file": "data/dev_noisy.jsonl",

    "SOT_weights":5,
    "max_position_embeddings":512,
    "grad_clipping": 1.0,
    "log_path": "log/default_base_noisy",
    "k":10,
    "max_epoch": 400,
    "warmup_epoch": 5,
    "max_length": 512,

    "output_path": "output/default_base_noisy",
    "use_copy": true,
    "per_declaration" : false,
    "enrich_ner": true,

    "use_gpu": true,
    "gpu_device": 0
}
